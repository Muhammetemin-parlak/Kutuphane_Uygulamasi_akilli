@model PaginatedList<KutuphaneProjesi.Models.Book>

@{
    ViewData["Title"] = "Kitap Listesi";
}

<h1>📚 Kütüphane Arşivi</h1>

<div class="row mb-3">
    <div class="col-md-6">
        @if (User.IsInRole("Admin") || User.IsInRole("Personel"))
        {
            <a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i> Yeni Kitap Ekle</a>
        }
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchString" class="form-control me-2" placeholder="Kitap veya yazar ara..." value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary">Ara</button>
            <a asp-action="Index" class="btn btn-secondary ms-1">Sıfırla</a>
        </form>
    </div>
</div>

<table class="table table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Kapak</th>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size: 24px;">📖</td>
                <td class="fw-bold">@item.Title</td>
                <td>@item.Author</td>
                <td>
                    @if (item.StockQuantity > 0)
                    {
                        <span class="badge bg-success">@item.StockQuantity Adet</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Tükendi</span>
                    }
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Personel"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    }

                    @if (item.StockQuantity > 0)
                    {
                        <a asp-controller="Loans" asp-action="Create" asp-route-bookId="@item.Id" class="btn btn-sm btn-primary">Ödünç Al</a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-secondary" disabled>Ödünç Alınamaz</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="d-flex justify-content-center mt-3">
    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-outline-primary me-2 @prevDisabled">
        <i class="fa-solid fa-chevron-left"></i> Önceki
    </a>
    <span class="align-self-center mx-2 fw-bold">Sayfa @Model.PageIndex / @Model.TotalPages</span>
    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-outline-primary ms-2 @nextDisabled">
        Sonraki <i class="fa-solid fa-chevron-right"></i>
    </a>
</div>