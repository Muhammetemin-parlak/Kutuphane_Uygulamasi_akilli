@model PaginatedList<KutuphaneProjesi.Models.Loan>

@{
    ViewData["Title"] = "Ödünç İşlemleri";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">⚡ Ödünç ve Ceza Takibi</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle table-bordered">
                    <thead class="table-secondary">
                        <tr>
                            <th>Kitap</th>
                            <th>Üye</th>
                            <th>Başlangıç</th>
                            <th>Bitiş (Son İade)</th>
                            <th>Ceza</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.FineAmount > 0 ? "table-danger" : "")">
                                <td>@item.Book?.Title</td>
                                <td>@item.User?.Email</td>
                                <td>@item.LoanDate.ToString("dd.MM HH:mm")</td>
                                <td><span class="fw-bold text-primary">@(item.DueDate?.ToString("dd.MM HH:mm") ?? "-")</span></td>
                                <td>
                                    @if (item.FineAmount > 0)
                                    {
                                        <span class="text-danger fw-bold fs-5">@item.FineAmount?.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-success small">Temiz</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == "Bekliyor")
                                    {
                                        <span class="badge bg-warning text-dark">⏳ Onay Bekliyor</span>
                                    }
                                    else if (item.Status == "İade Edildi")
                                    {
                                        <span class="badge bg-secondary">↩ İade Edildi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">✅ Aktif</span>
                                    }
                                </td>
                                <td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Personel"))
                                    {
                                        if (item.Status == "Bekliyor")
                                        {
                                            <a asp-action="ApproveLoan" asp-route-id="@item.Id" class="btn btn-success btn-sm">✔</a>
                                            <a asp-action="RejectLoan" asp-route-id="@item.Id" class="btn btn-danger btn-sm">❌</a>
                                        }
                                        else if (item.Status == "Aktif")
                                        {
                                            <a asp-action="ReturnBook" asp-route-id="@item.Id" class="btn btn-sm btn-primary">↩ İade Al</a>
                                        }

                                        if (item.FineAmount > 0)
                                        {
                                            <a asp-action="PayFine" asp-route-id="@item.Id" class="btn btn-sm btn-warning fw-bold text-dark mt-1">💰 Tahsil Et</a>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <div class="d-flex justify-content-center mt-3">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   class="btn btn-outline-dark me-2 @prevDisabled">
                    <i class="fa-solid fa-chevron-left"></i> Önceki
                </a>

                <span class="align-self-center mx-2 fw-bold">
                    Sayfa @Model.PageIndex / @Model.TotalPages
                </span>

                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   class="btn btn-outline-dark ms-2 @nextDisabled">
                    Sonraki <i class="fa-solid fa-chevron-right"></i>
                </a>
            </div>

        </div>
    </div>
</div>