@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary">Kütüphane Yönetim Paneli</h1>
    <p class="lead text-muted">Kütüphane durumunu buradan hızlıca takip edebilirsiniz.</p>
</div>

@if (User.IsInRole("Admin") || User.IsInRole("Personel"))
{
    <div class="row">

        <div class="col-md-3 mb-4">
            <div class="card shadow border-0 h-100 py-2" style="border-left: 5px solid #0d6efd !important;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Kitap
                            </div>
                            <div class="h3 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalBooks</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa-solid fa-book fa-2x text-gray-300 text-primary opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow border-0 h-100 py-2" style="border-left: 5px solid #198754 !important;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Okuyucu (Üye)
                            </div>
                            <div class="h3 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalMembers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa-solid fa-users fa-2x text-success opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow border-0 h-100 py-2" style="border-left: 5px solid #ffc107 !important;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Okunan Kitaplar
                            </div>
                            <div class="h3 mb-0 font-weight-bold text-gray-800">@ViewBag.ActiveLoans</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa-solid fa-book-reader fa-2x text-warning opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow border-0 h-100 py-2" style="border-left: 5px solid #dc3545 !important;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Kasa (Cezalar)
                            </div>
                            <div class="h3 mb-0 font-weight-bold text-gray-800">
                                @(ViewBag.TotalFines != null ? Convert.ToDecimal(ViewBag.TotalFines).ToString("C2") : "0 ₺")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fa-solid fa-lira-sign fa-2x text-danger opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-white">
                <h6 class="m-0 font-weight-bold text-primary">📚 Hızlı İşlemler</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (User.IsInRole("Admin") || User.IsInRole("Personel"))
                    {
                        <a asp-controller="Books" asp-action="Create" class="btn btn-outline-primary text-start">
                            <i class="fa-solid fa-plus me-2"></i> Yeni Kitap Ekle
                        </a>
                        <a asp-controller="Users" asp-action="Index" class="btn btn-outline-info text-start text-dark">
                            <i class="fa-solid fa-user-gear me-2"></i> Üyeleri Yönet
                        </a>
                        <a asp-controller="Loans" asp-action="Index" class="btn btn-outline-warning text-start text-dark">
                            <i class="fa-solid fa-clock-rotate-left me-2"></i> Ödünç ve Ceza Takibi
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Books" asp-action="Index" class="btn btn-primary">
                            <i class="fa-solid fa-search me-2"></i> Kitap Ara
                        </a>
                        <a asp-controller="Profile" asp-action="Index" class="btn btn-success">
                            <i class="fa-solid fa-user me-2"></i> Profilim ve Borçlarım
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="alert alert-info shadow-sm">
            <h4 class="alert-heading"><i class="fa-solid fa-circle-info me-2"></i>Hoşgeldiniz!</h4>
            <p>
                Kütüphane otomasyon sistemine hoşgeldiniz.
                @(User.IsInRole("Admin") ? "Yönetici paneli üzerinden tüm istatistikleri görebilirsiniz." : "Kitap aramak veya ödünç almak için menüyü kullanabilirsiniz.")
            </p>
            <hr>
            <p class="mb-0 small text-muted">
                <i class="fa-regular fa-clock me-1"></i> Sistem Saati: @DateTime.Now.ToString("dd MMMM yyyy HH:mm")
            </p>
        </div>
    </div>
</div>