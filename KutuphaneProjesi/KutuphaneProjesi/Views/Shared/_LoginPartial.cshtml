<ul class="navbar-nav">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item d-flex align-items-center me-2">
            <span class="nav-link mb-0 fw-bold text-white">
                <i class="bi bi-person-circle me-1"></i>Merhaba, @User.Identity.Name!
            </span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-white border-0 p-2" style="cursor: pointer;">
                    <i class="bi bi-box-arrow-right me-1"></i>Çıkış Yap
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">
                <i class="bi bi-person-plus me-1"></i>Kayıt Ol
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Giriş Yap
            </a>
        </li>
    }
</ul>